<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".view.SelectTeamActivity">

    <View android:layout_width="700dp" android:layout_height="400dp" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@drawable/back_teamcolor_main" android:id="@+id/selteam_top_v"
          app:layout_constraintBottom_toTopOf="parent"
          app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.501"
          app:layout_constraintVertical_bias="0.0">

    </View>
    <TextView
            android:text="팀을 선택하세요"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/selteam_top_v" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <com.nwar.individual.get_terra.customView.CustomButton
            android:layout_width="350dp" android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:background="@drawable/style_circle_main"
            app:layout_constraintHorizontal_bias="0.488" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/selteam_green_btn" android:text="Team_Blue"
            android:id="@+id/selteam_blue_btn"/>
    <com.nwar.individual.get_terra.customView.CustomButton
            android:layout_width="350dp" android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="30sp"
            android:background="@drawable/style_circle_main"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/selteam_violet_btn"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="parent" android:text="Team_Violet"/>
    <com.nwar.individual.get_terra.customView.CustomButton
            android:layout_width="350dp" android:layout_height="70dp"
            android:background="@drawable/style_circle_main"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/selteam_yellow_btn"
            app:layout_constraintHorizontal_bias="0.488" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/selteam_violet_btn" android:text="Team_Yellow"/>
    <com.nwar.individual.get_terra.customView.CustomButton
            android:layout_width="350dp" android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:background="@drawable/style_circle_main"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="30sp"
            android:layout_marginStart="8dp"
            android:id="@+id/selteam_green_btn" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/selteam_yellow_btn" android:text="Team_Green"/>
</android.support.constraint.ConstraintLayout>