<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".view.MainActivity">
    <View android:layout_width="700dp" android:layout_height="400dp" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@drawable/back_teamcolor_main" android:id="@+id/main_top_v"
          app:layout_constraintBottom_toTopOf="parent"
          app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.500"
          app:layout_constraintVertical_bias="0.0">

    </View>
    <View
            android:background="@drawable/style_circle_main"
            android:layout_width="135dp"
            android:layout_height="135dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_top_v"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/main_top_v" android:id="@+id/view2"/>
    <EditText android:layout_width="300dp" android:layout_height="wrap_content"
              android:layout_marginTop="60dp"
              android:hint="ID"
              app:layout_constraintTop_toBottomOf="@+id/view2" android:id="@+id/login_id_et"
              app:layout_constraintStart_toStartOf="parent"
              android:textColor="@color/main"
              android:textColorHint="@color/main"
              app:layout_constraintEnd_toEndOf="parent"/>
    <EditText android:layout_width="300dp" android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:textColorHint="@color/main"
              android:hint="PW"
              android:inputType="textPassword"
              android:textColor="@color/main"
              app:layout_constraintTop_toBottomOf="@+id/login_id_et" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" android:id="@+id/login_pw_et"/>
    <com.nwar.individual.get_terra.customView.CustomButton
            android:text="Sign Up"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/login_signUp_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/style_circle_main"
            app:layout_constraintHorizontal_bias="0.501" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/login_login_tv"/>
    <com.nwar.individual.get_terra.customView.CustomButton
            android:text="Sign In"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/style_circle_main"
            android:id="@+id/login_login_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>