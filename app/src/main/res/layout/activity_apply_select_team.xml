<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".view.ApplySelectTeamActivity">

    <View android:layout_width="700dp" android:layout_height="400dp" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@drawable/back_teamcolor_main"
          android:id="@+id/applyteam_top_v"
          app:layout_constraintBottom_toTopOf="parent"
          app:layout_constraintHorizontal_bias="0.501"
          app:layout_constraintTop_toTopOf="parent">
    </View>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/applyteam_backbody_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/applyteam_top_v"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
        <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                android:gravity="top|center_horizontal"
                android:text="Team_Color" android:id="@+id/applyteam_body_v"/>
        <com.nwar.individual.get_terra.customView.CustomButton
                android:layout_width="0dp" android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/applyteam_apply_btn"
                android:text="선택"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/applyteam_body_v"
                app:layout_constraintEnd_toEndOf="@+id/applyteam_body_v"
                app:layout_constraintStart_toStartOf="@+id/applyteam_body_v"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>